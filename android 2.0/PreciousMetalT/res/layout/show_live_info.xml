<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101419"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/hander_view"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/title_bg_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="back"
            android:src="@drawable/bg_title_back" />

        <TextView
            android:id="@+id/title"
            style="@style/white22Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxEms="8"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/node_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/node_icon"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/node_icon"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/live_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/live_laiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/live_content"
            android:layout_below="@+id/live_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/live_lianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/live_laiyuan"
            android:layout_below="@+id/live_laiyuan"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>