<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_popup_gline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <RadioButton
            android:id="@+id/popup_gline"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/bg_optional_check"
            android:padding="10dip"
            android:text=" 画  线     " />

        <RadioButton
            android:id="@+id/popup_high_gline"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/bg_optional_check"
            android:padding="10dip"
            android:text="画高线    " />

        <RadioButton
            android:id="@+id/popup_low_gline"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/bg_optional_check"
            android:padding="10dip"
            android:text="画低线    " />
        
        <RadioButton
            android:id="@+id/popup_hide_gline"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/bg_optional_check"
            android:padding="10dip"
            android:text=" 隐  藏     " />
        
    </RadioGroup>

</LinearLayout>