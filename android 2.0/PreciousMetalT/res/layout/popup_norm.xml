<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/content_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="170dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/popup_norm_boll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="BOLL 布林轨道"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_driver" />

        <TextView
            android:id="@+id/popup_norm_sma"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="SMA 简单均线"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_driver" />

        <TextView
            android:id="@+id/popup_norm_ema"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="EMA  指数均线"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_driver" />

        <TextView
            android:id="@+id/popup_norm_macd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="MACD"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_driver" />

        <TextView
            android:id="@+id/popup_norm_kdj"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="KDJ"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/tab_driver" />

        <TextView
            android:id="@+id/popup_norm_rsi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcolor_item_linear"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="RSI 相对强弱指标"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>